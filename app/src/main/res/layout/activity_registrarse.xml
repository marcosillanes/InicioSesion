<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.custom.Registrarse"
    android:background="@drawable/listgrad"

    >

    <LinearLayout
        android:layout_width="347dp"
        android:layout_height="574dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:orientation="vertical"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        >

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="674dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EntradaNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/stylo"
                android:ems="10"
                android:hint="Nombre"

                android:inputType="textPersonName"
                app:counterMaxLength="30" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="574dp"
                app:counterMaxLength="8">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/EntradaTelefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"


                    android:background="@drawable/stylo"
                    android:ems="10"
                    android:hint="Telefono"
                    android:inputType="number"


                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="513dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/EntradaEmailInicio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"

                        android:background="@drawable/stylo"
                        android:ems="10"
                        android:hint="Email"
                        android:inputType="textEmailAddress"

                        />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="447dp"
                        app:endIconMode="password_toggle">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/EntradaContrase単aInicio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/stylo"
                            android:hint="Contrase単a"

                            android:inputType="textPassword" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="398dp"
                            app:endIconMode="password_toggle">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/Entrada2Contrase単a"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"

                                android:background="@drawable/stylo"
                                android:hint="Confirmar Contrase単a"
                                android:inputType="textPassword" />

                            <Button

                                android:id="@+id/button3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="50dp"
                                android:background="@drawable/custom_boton"
                                android:fontFamily="@font/roboto_fonts_family"
                                android:hint="REGISTRARSE"
                                android:onClick="registrarUsuario"
                                android:textColorHint="@color/boton"
                                app:backgroundTint="@null" />

                                />

                        </com.google.android.material.textfield.TextInputLayout>
                    </com.google.android.material.textfield.TextInputLayout>
                </com.google.android.material.textfield.TextInputLayout>
            </com.google.android.material.textfield.TextInputLayout>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>